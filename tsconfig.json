{
   "compilerOptions": {
     "allowJs": true,
     "allowSyntheticDefaultImports": true,
     "baseUrl": "./src",
     "declaration": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "forceConsistentCasingInFileNames": true,
     "isolatedModules": true,
     "lib": [
       "esnext",
       "dom",
       "dom.iterable"
     ],
     "module": "commonjs",
     "moduleResolution": "node",
     "noEmit": false,
     "noFallthroughCasesInSwitch": true,
     "noImplicitAny": false,
     "outDir": "build",
     "paths": {
       "config/*": [
         "config/*"
       ],
       "database/*": [
         "database/*"
       ],
       "models/*": [
         "models/*"
       ],
       "routes/*": [
         "routes/*"
       ],
       "scripts/*": [
         "scripts/*"
       ],
       "services/*": [
         "services/*"
       ],
       "types/*": [
         "types/*"
       ]
     },
     "resolveJsonModule": true,
     "skipLibCheck": true,
     "strict": true,
     "strictPropertyInitialization": false,
     "target": "esnext"
   },
   "path": {},
   "exclude": [
     "node_modules",
     "build",
     "**/*.test.ts"
   ],
   "include": [
     "src"
   ]
 }